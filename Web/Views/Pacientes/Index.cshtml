@model IEnumerable<Core.Entities.Paciente>

@{
    ViewData["Title"] = "Listado de Pacientes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Paciente
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>NHC</th>
                            <th>Nombre</th>
                            <th>Apellidos</th>
                            <th>DNI</th>
                            <th>Edad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nhc)</td>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@item.Apellido1 @item.Apellido2</td>
                                <td>@Html.DisplayFor(modelItem => item.Dni)</td>
                                <td>@(DateTime.Now.Year - item.FechaNacimiento.Year)</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Nhc" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>Detalles
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Nhc" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i>Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Nhc" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>Borrar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table th {
            white-space: nowrap;
        }

        .btn-group .btn {
            padding: 0.25rem 0.5rem;
        }
    </style>
}